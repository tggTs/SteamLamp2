<Window x:Class="SteamLamp.SIGN_UP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account" Height="550" Width="400"
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="SteamTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#32353c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style x:Key="SteamPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#32353c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style x:Key="SteamActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#214b6b"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1b2838" BorderBrush="#2a2e33" BorderThickness="1" CornerRadius="20" ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#2a2e33" MouseLeftButtonDown="Header_MouseDown">
                <Button Content="✕" HorizontalAlignment="Right" Width="40" Background="Transparent" Foreground="Gray" BorderThickness="0" Click="Close_Click"/>
            </Border>

            <Grid Grid.Row="1">
                <Grid Margin="40,20">
                    <StackPanel x:Name="RegisterForm">
                        <TextBlock Text="СОЗДАНИЕ АККАУНТА" Foreground="White" FontSize="22" FontWeight="Light" Margin="0,0,0,20"/>

                        <TextBlock Text="ЛОГИН" Foreground="#afafaf" FontSize="10" Margin="0,0,0,5"/>
                        <TextBox x:Name="RegLogin" Style="{StaticResource SteamTextBox}"/>

                        <TextBlock Text="НИКНЕЙМ" Foreground="#afafaf" FontSize="10" Margin="0,0,0,5"/>
                        <TextBox x:Name="RegNick" Style="{StaticResource SteamTextBox}"/>

                        <TextBlock Text="ПАРОЛЬ" Foreground="#afafaf" FontSize="10" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="RegPass" Style="{StaticResource SteamPasswordBox}"/>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="CaptchaText" Text="0 + 0 =" Foreground="#afafaf" FontSize="10" VerticalAlignment="Center"/>
                            <TextBox x:Name="CaptchaInput" Width="60" Margin="10,0,0,0" Style="{StaticResource SteamTextBox}" Height="30" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Content="Создать аккаунт" Height="40" Margin="0,20,0,15" Style="{StaticResource SteamActionButtonStyle}" Click="Register_Click"/>
                        <TextBlock Text="Войти" Foreground="#66c0f4" FontSize="12" Cursor="Hand" HorizontalAlignment="Center" MouseLeftButtonDown="SwitchToLogin_Click"/>
                    </StackPanel>

                    <StackPanel x:Name="LoginForm" Visibility="Collapsed">
                        <TextBlock Text="ВХОД В АККАУНТ" Foreground="White" FontSize="22" FontWeight="Light" Margin="0,0,0,20"/>

                        <TextBlock Text="НИКНЕЙМ" Foreground="#afafaf" FontSize="10" Margin="0,0,0,5"/>
                        <TextBox x:Name="LogNick" Style="{StaticResource SteamTextBox}"/>

                        <TextBlock Text="ПАРОЛЬ" Foreground="#afafaf" FontSize="10" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="LogPass" Style="{StaticResource SteamPasswordBox}"/>

                        <Button Content="Войти" Height="40" Margin="0,10,0,15" Style="{StaticResource SteamActionButtonStyle}" Click="Login_Click"/>
                        <TextBlock Text="Создать новый" Foreground="#66c0f4" FontSize="12" Cursor="Hand" HorizontalAlignment="Center" MouseLeftButtonDown="SwitchToRegister_Click"/>
                    </StackPanel>
                </Grid>

                <Grid x:Name="NotificationOverlay" Visibility="Collapsed">
                    <Border Background="#CC000000"/>
                    <Border Background="#2a2e33" BorderBrush="#66c0f4" BorderThickness="1" CornerRadius="10" Width="300" Height="160" VerticalAlignment="Center">
                        <StackPanel VerticalAlignment="Center" Margin="20">
                            <TextBlock x:Name="NotificationTitle" Foreground="#66c0f4" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock x:Name="NotificationMessage" Foreground="White" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,20"/>
                            <Button Content="OK" Width="100" Height="30" Style="{StaticResource SteamActionButtonStyle}" Click="CloseNotification_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>