<UserControl x:Class="SteamLamp.ProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamLamp"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1050">

    <Grid>
        <Grid x:Name="MainProfileLayout">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#202a3f" Offset="0.0"/>
                    <GradientStop Color="#1b2838" Offset="0.4"/>
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel Margin="40,15" VerticalAlignment="Top">
                <Border Background="#16202d" BorderBrush="#2a2e33" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="124" Height="124" BorderBrush="#66c0f4" BorderThickness="2">
                            <Grid Background="#212c3d">
                                <TextBlock Text="AVA" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="20,5,0,0">
                            <TextBlock x:Name="ProfileNickname" Text="NickNAME" FontSize="26" Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text="В сети" Foreground="#66c0f4" FontSize="13" Margin="0,2"/>
                            <TextBlock Text="Описание профиля" Foreground="#898989" FontSize="12" Margin="0,10,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Уровень " Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <Border BorderBrush="#d9ab26" BorderThickness="2" Width="36" Height="36" CornerRadius="18">
                                    <TextBlock Text="10" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <Button Content="Редактировать" Margin="0,15,0,0" Width="130" Height="28" Background="#3d4450" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Height="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="280"/>
                    </Grid.ColumnDefinitions>

                    <ContentControl x:Name="ProfileContentFrame" Grid.Column="0" Margin="0,0,15,0">
                        <Border Background="#16202d" BorderBrush="#2a2e33" BorderThickness="1" Padding="15">
                            <StackPanel>
                                <TextBlock Text="ВИТРИНА ИГР" Foreground="#66c0f4" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Border Height="140" Background="#1b2838" BorderBrush="#2a2e33" BorderThickness="1">
                                    <TextBlock Text="Здесь будет ваша витрина" Foreground="#4f535b" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </ContentControl>

                    <StackPanel Grid.Column="1">
                        <Border Background="#16202d" BorderBrush="#2a2e33" BorderThickness="1" Padding="12">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <TextBlock Text="ДРУЗЬЯ" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                    <Button Content="Все" HorizontalAlignment="Right" Foreground="#66c0f4" Background="Transparent" BorderThickness="0" Click="OpenFriends_Click" Cursor="Hand"/>
                                </Grid>
                                <StackPanel>
                                    <Grid Margin="0,0,0,8">
                                        <Border Width="30" Height="30" Background="#66c0f4"/>
                                        <TextBlock Text="Ivan_Prog" Foreground="#66c0f4" VerticalAlignment="Center" Margin="40,0,0,0" FontSize="12"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,8">
                                        <Border Width="30" Height="30" Background="#57cbde"/>
                                        <TextBlock Text="Sanya_3D" Foreground="#57cbde" VerticalAlignment="Center" Margin="40,0,0,0" FontSize="12"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>

        <ContentControl x:Name="FriendsOverlay" Visibility="Collapsed"/>
    </Grid>
</UserControl>